<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cheat"
        android:text="CHEAT"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:textSize="5sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/guess_responder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a number between\n1 and 100"
        android:textSize="20sp"
        android:layout_marginTop="234dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/final_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="50sp"
        android:layout_marginTop="234dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remaining tries: 10"
        android:id="@+id/remaining_tries"
        android:layout_marginTop="16dp"
        android:textSize="17sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearLayoutGuessBox"
        android:weightSum="10">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="Enter your first name here"
            android:textColor="#000"
            android:inputType="textCapWords"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/user_input_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:hint="Take a guess here!"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#000"
            android:layout_weight="8"
            android:focusableInTouchMode="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guess_button"
            android:text="Guess"
            android:background="#f01c00"
            android:textColor="#FFF"
            android:layout_gravity="bottom"
            android:layout_marginBottom="1dp"
            android:enabled="false"
            android:layout_weight="2"
            android:onClick="getGuess"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Name"
            android:layout_gravity="bottom"
            android:layout_marginBottom="1dp"
            android:id="@+id/submitName"
            android:background="#f01c00"
            android:textColor="#FFF"
            android:enabled="false"
            android:layout_weight="3"
            android:visibility="gone"
            android:onClick="next"/>

    </LinearLayout>




</RelativeLayout>
