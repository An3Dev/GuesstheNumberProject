<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8c8b8a</item>
        <item name="colorPrimaryDark">#757371</item>
        <item name="colorAccent">#f01c00</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppThemeDark" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#757371</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTheme" parent="Base.Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">#8c8b8a</item>
        <item name="colorPrimaryDark">#757371</item>
        <item name="colorAccent">#f01c00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="AndresGameMode" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#8c8b8a</item>
        <item name="colorPrimaryDark">#757371</item>
        <item name="colorAccent">#f01c00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#8c8b8a</item>
        <item name="colorPrimaryDark">#757371</item>
        <item name="colorAccent">#f01c00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AndresGameMode.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AndresGameMode.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>
    <style name="GridViewStyle" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">#8c8b8a</item>
        <item name="colorPrimaryDark">#757371</item>
        <item name="colorAccent">#f01c00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EasterEggStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#8c8b8a</item>
        <item name="colorPrimaryDark">#757371</item>
        <item name="colorAccent">#f01c00</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textViewStyle">@style/Theme.AppCompat.Light.NoActionBar</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListViewModeXL" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#8c8b8a</item>
        <item name="colorPrimaryDark">#757371</item>
        <item name="colorAccent">#f01c00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="GridViewStyleXL" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#8c8b8a</item>
        <item name="colorPrimaryDark">#757371</item>
        <item name="colorAccent">#f01c00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DonationTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#8c8b8a</item>
        <item name="colorPrimaryDark">#757371</item>
        <item name="colorAccent">#f01c00</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
